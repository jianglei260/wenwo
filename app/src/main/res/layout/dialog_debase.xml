<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dislike_title"/>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/image"
            android:background="@drawable/shape_search_box_border"
            android:hint="吐槽是为了让我变得更好"
            android:padding="8dp" />

        <TextView
            android:id="@+id/debase_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text"
            android:layout_toRightOf="@id/image"
            android:padding="8dp"
            android:text="⚡️骗子一点都不好吃。" />

        <TextView
            android:id="@+id/debase_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/debase_label1"
            android:layout_toRightOf="@id/image"
            android:padding="8dp"
            android:text="⚡敢不敢把地点标注准确一点。" />
    </RelativeLayout>

    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/content"
        android:padding="16dp"
        android:text="发送"
        android:textColor="@color/white" />
</RelativeLayout>